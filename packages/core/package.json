{
  "$schema": "http://json.schemastore.org/package",
  "name": "wmfnext-shell",
  "version": "0.0.1",
  "description": "Shell for a federated application",
  "author": "Patrick Lafrance",
  "license": "Apache-2.0",
  "repository": "https://github.com/patricklafrance/wmfnext-shell.git",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "engines": {
    "node": ">=19"
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc --build ./tsconfig.build.json",
    "clean": "run-p delete-dist delete-ts-cache unlink-pkg",
    "delete-dist": "rimraf dist",
    "delete-ts-cache": "rimraf *.tsbuildinfo",
    "dev": "tsc --watch --project ./tsconfig.build.json",
    "setup": "yarn link",
    "unlink-pkg": "yarn unlink"
  },
  "peerDependencies": {
    "react": "*",
    "react-dom": "*",
    "react-router-dom": ">=6.4.0"
  },
  "dependencies": {
    "eventemitter3": "5.0.0"
  }
}

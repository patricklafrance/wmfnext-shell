{
  "name": "wmfnext-remote-loader",
  "version": "0.0.1",
  "description": "Loader for remote modules using Webpack Module Federation",
  "author": "Patrick Lafrance",
  "license": "Apache-2.0",
  "repository": "https://github.com/patricklafrance/wmfnext-shell",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "files": [
    "/dist"
  ],
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "prebuild": "yarn clean",
    "build": "tsc --build ./tsconfig.build.json",
    "clean": "run-p delete-dist delete-ts-cache",
    "delete-dist": "rimraf dist",
    "delete-ts-cache": "rimraf *.tsbuildinfo",
    "predev": "yarn clean",
    "dev": "tsc --watch --project ./tsconfig.build.json",
    "setup": "yarn link"
  },
  "peerDependencies": {
    "webpack": ">=5.0.0"
  },
  "dependencies": {
    "wmfnext-shell": "0.0.1"
  }
}
